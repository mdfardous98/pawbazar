# API Configuration
VITE_API_URL=http://localhost:5000

# Firebase Configuration (replace with your actual Firebase project values)
# To get these values:
# 1. Go to https://console.firebase.google.com/
# 2. Create a new project or select existing one
# 3. Go to Project Settings > General > Your apps
# 4. Add a web app and copy the config values
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:your_app_id_here

# Optional: Analytics
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# App Configuration
VITE_APP_NAME=PawBazar
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Pet Adoption & Supply Portal

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false